{
	"name": "periodix-planner",
	"version": "1.1.1",
	"description": "Intelligent periodic note generation with hierarchical time allocation, budget tracking, and interconnected daily/weekly/monthly/quarterly/yearly planning.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -f main.js",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"lint:eslint": "eslint src/",
		"lint:eslint:fix": "eslint --fix src/",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"ci": "pnpm check && pnpm test && pnpm build"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"periodic-notes",
		"planning",
		"time-allocation",
		"time-tracking",
		"productivity",
		"goals",
		"budgeting",
		"daily",
		"weekly",
		"monthly",
		"quarterly",
		"yearly"
	],
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/Real1tyy"
	},
	"author": "Real1tyy",
	"license": "MIT",
	"packageManager": "pnpm@9.0.0",
	"pnpm": {
		"overrides": {
			"obsidian": "1.8.7"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.10.1",
		"@typescript-eslint/parser": "^8.48.0",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.11",
		"eslint": "^9.39.1",
		"eslint-plugin-obsidianmd": "^0.1.9",
		"jsdom": "^27.2.0",
		"obsidian": "1.8.7",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@real1ty-obsidian-plugins/utils": "^2.12.0",
		"chart.js": "^4.5.1",
		"luxon": "^3.7.2",
		"nanoid": "^5.1.6",
		"rxjs": "^7.8.2",
		"zod": "^4.1.12"
	}
}

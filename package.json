{
	"name": "periodix-planner",
	"version": "1.6.0",
	"description": "Intelligent periodic note generation with hierarchical time allocation, budget tracking, and interconnected daily/weekly/monthly/quarterly/yearly planning.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -f main.js",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"check": "pnpm lint && pnpm format",
		"check:fix": "pnpm lint:fix && pnpm format:fix",
		"ci": "pnpm check && pnpm test && pnpm build"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"periodic-notes",
		"planning",
		"time-allocation",
		"time-tracking",
		"productivity",
		"goals",
		"budgeting",
		"daily",
		"weekly",
		"monthly",
		"quarterly",
		"yearly"
	],
	"funding": {
		"type": "custom",
		"url": "https://matejvavroproductivity.com/support/"
	},
	"author": "Matej Vavro",
	"license": "MIT",
	"packageManager": "pnpm@9.0.0",
	"pnpm": {
		"overrides": {
			"obsidian": "1.8.7"
		}
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.10.9",
		"builtin-modules": "^5.0.0",
		"esbuild": "^0.27.2",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-obsidianmd": "^0.1.9",
		"globals": "^15.14.0",
		"jsdom": "^27.4.0",
		"knip": "^5.81.0",
		"obsidian": "1.8.7",
		"prettier": "^3.4.2",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.18.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"chart.js": "^4.5.1",
		"colord": "^2.9.3",
		"luxon": "^3.7.2",
		"nanoid": "^5.1.6",
		"rxjs": "^7.8.2",
		"yaml": "^2.7.0",
		"zod": "^4.3.5",
		"@real1ty-obsidian-plugins": "file:./shared"
	}
}
